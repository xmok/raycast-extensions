{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pomo",
  "title": "Pomo",
  "description": "Control Pomo, a minimal Pomodoro timer for your macOS menu bar",
  "icon": "extension-icon.png",
  "author": "claud",
  "platforms": [
    "macOS"
  ],
  "categories": [
    "Productivity",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start-5",
      "title": "Start 5 Minutes",
      "subtitle": "Pomo",
      "description": "Start a 5 minute timer",
      "mode": "no-view"
    },
    {
      "name": "start-10",
      "title": "Start 10 Minutes",
      "subtitle": "Pomo",
      "description": "Start a 10 minute timer",
      "mode": "no-view"
    },
    {
      "name": "start-15",
      "title": "Start 15 Minutes",
      "subtitle": "Pomo",
      "description": "Start a 15 minute timer",
      "mode": "no-view"
    },
    {
      "name": "start-25",
      "title": "Start 25 Minutes",
      "subtitle": "Pomo",
      "description": "Start a 25 minute timer",
      "mode": "no-view"
    },
    {
      "name": "start-45",
      "title": "Start 45 Minutes",
      "subtitle": "Pomo",
      "description": "Start a 45 minute timer",
      "mode": "no-view"
    },
    {
      "name": "toggle-timer",
      "title": "Toggle Timer",
      "subtitle": "Pomo",
      "description": "Toggle timer state (start/pause/resume)",
      "mode": "no-view"
    },
    {
      "name": "pause-timer",
      "title": "Pause Timer",
      "subtitle": "Pomo",
      "description": "Pause the running timer",
      "mode": "no-view"
    },
    {
      "name": "reset-timer",
      "title": "Reset Timer",
      "subtitle": "Pomo",
      "description": "Reset timer to idle state",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
