{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "openstatus",
  "title": "OpenStatus",
  "description": "",
  "icon": "command-icon.png",
  "author": "xmok",
  "categories": [
    "Applications",
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "openstatus_url",
      "description": "",
      "title": "OpenStatus URL",
      "placeholder": "https://openstatus.dev/",
      "required": true,
      "default": "https://openstatus.dev/",
      "type": "textfield"
    },
    {
      "name": "api_token",
      "description": "",
      "title": "API Token",
      "placeholder": "os_xxxxxxxxx",
      "required": true,
      "type": "password"
    }
  ],
  "commands": [
    {
      "name": "monitors",
      "title": "Monitors",
      "description": "",
      "mode": "view"
    },
    {
      "name": "incidents",
      "title": "Incidents",
      "description": "",
      "mode": "view"
    },
    {
      "name": "status-pages",
      "title": "Status Pages",
      "description": "",
      "mode": "view"
    },
    {
      "name": "status-reports",
      "title": "Status Reports",
      "description": "",
      "mode": "view"
    },
    {
      "name": "notifications",
      "title": "Notifications",
      "description": "",
      "mode": "view"
    },
    {
      "name": "checker",
      "title": "Checker",
      "description": "",
      "mode": "view",
      "arguments": [
        {
          "name": "region",
          "type": "dropdown",
          "placeholder": "REGION",
          "required": true,
          "data": [
            { "title": "Amsterdam", "value": "ams"},
            { "title": "Hong-Kong", "value": "hkg"},
            { "title": "Northern Virginia", "value": "iad"},
            { "title": "SÃ£o Paulo", "value": "gru"},
            { "title": "Sydney", "value": "syd"},
            { "title": "Johannesburg", "value": "jnb"}
          ]
        },
        {
          "name": "url",
          "placeholder": "URL",
          "type": "text",
          "required": true
        },
        {
          "name": "method",
          "placeholder": "METHOD",
          "type": "dropdown",
          "required": true,
          "data": [
            {
              "title": "GET",
              "value": "GET"
            },
            {
              "title": "POST",
              "value": "POST"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.74.1",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
