{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "proton-mail",
  "title": "Proton Mail",
  "description": "View and manage your Proton Mail inbox via Proton Mail Bridge",
  "icon": "extension-icon.png",
  "author": "NormC",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "System",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "list-emails",
      "title": "Browse Email",
      "subtitle": "Proton Mail",
      "description": "View and manage your Proton Mail emails",
      "mode": "view"
    },
    {
      "name": "compose-email",
      "title": "Compose Email",
      "subtitle": "Proton Mail",
      "description": "Compose and send a new email",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "imapHost",
      "title": "IMAP Hostname",
      "description": "Proton Mail Bridge IMAP hostname (usually 127.0.0.1)",
      "type": "textfield",
      "required": true,
      "default": "127.0.0.1"
    },
    {
      "name": "imapPort",
      "title": "IMAP Port",
      "description": "Proton Mail Bridge IMAP port (usually 1143)",
      "type": "textfield",
      "required": true,
      "default": "1143"
    },
    {
      "name": "smtpHost",
      "title": "SMTP Hostname",
      "description": "Proton Mail Bridge SMTP hostname (usually 127.0.0.1)",
      "type": "textfield",
      "required": true,
      "default": "127.0.0.1"
    },
    {
      "name": "smtpPort",
      "title": "SMTP Port",
      "description": "Proton Mail Bridge SMTP port (usually 1025)",
      "type": "textfield",
      "required": true,
      "default": "1025"
    },
    {
      "name": "username",
      "title": "Username",
      "description": "Your Proton Mail email address",
      "type": "textfield",
      "required": true
    },
    {
      "name": "password",
      "title": "Password",
      "description": "Your Proton Mail Bridge password (from the Bridge app, not your Proton account password)",
      "type": "password",
      "required": true
    },
    {
      "name": "emailsToLoad",
      "title": "Emails to Load",
      "description": "Number of emails to load per page",
      "type": "dropdown",
      "required": false,
      "default": "50",
      "data": [
        {
          "title": "25",
          "value": "25"
        },
        {
          "title": "50",
          "value": "50"
        },
        {
          "title": "100",
          "value": "100"
        },
        {
          "title": "200",
          "value": "200"
        }
      ]
    },
    {
      "name": "composeFormat",
      "title": "Compose Format",
      "description": "Format for composing emails",
      "type": "dropdown",
      "required": false,
      "default": "markdown",
      "data": [
        {
          "title": "Markdown (HTML)",
          "value": "markdown"
        },
        {
          "title": "Plain Text",
          "value": "plaintext"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^1.17.0",
    "html-to-text": "^9.0.5",
    "imapflow": "^1.0.171",
    "mailparser": "^3.7.2",
    "marked": "^17.0.1",
    "nodemailer": "^6.9.16"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/html-to-text": "^9.0.4",
    "@types/mailparser": "^3.4.5",
    "@types/node": "22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
