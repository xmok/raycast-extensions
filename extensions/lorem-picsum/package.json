{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lorem-picsum",
  "title": "Lorem Picsum",
  "description": "Generate a random image link for given dimensions.",
  "icon": "extension_icon.png",
  "author": "michaelfarquhar",
  "contributors": [
    "j3lte"
  ],
  "categories": [
    "Data",
    "Design Tools",
    "Developer Tools",
    "Media",
    "Web"
  ],
  "license": "MIT",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Lorem Picsum Image",
      "subtitle": "Lorem Picsum",
      "description": "Get a random image given the dimensions.",
      "keywords": [
        "lorem",
        "picsum",
        "image"
      ],
      "mode": "no-view",
      "arguments": [
        {
          "name": "width",
          "type": "text",
          "required": true,
          "placeholder": "width"
        },
        {
          "name": "height",
          "type": "text",
          "required": false,
          "placeholder": "height"
        },
        {
          "name": "grayscale",
          "type": "dropdown",
          "required": false,
          "placeholder": "grayscale",
          "data": [
            {
              "value": "true",
              "title": "Yes"
            }
          ]
        }
      ]
    },
    {
      "name": "list",
      "title": "Image List",
      "description": "Show a list of images",
      "subtitle": "Lorem Picsum",
      "mode": "view",
      "keywords": [
        "lorem",
        "picsum",
        "image",
        "list"
      ]
    }
  ],
  "preferences": [
    {
      "name": "action",
      "type": "dropdown",
      "title": "Default Action",
      "description": "Select action that happens when running the command",
      "data": [
        {
          "value": "clipboard",
          "title": "Copy to Clipboard"
        },
        {
          "value": "paste",
          "title": "Paste to Active App"
        }
      ],
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
