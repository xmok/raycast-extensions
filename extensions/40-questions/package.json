{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "40-questions",
  "title": "40 Questions - Yearly Reflection",
  "description": "Questions to ask yourself at the end of each year",
  "icon": "extension_icon.png",
  "author": "dnnsmnstrr",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "answer-40-questions",
      "title": "Answer 40 Questions",
      "description": "Quickly answer the 40 questions for the year",
      "mode": "view"
    },
    {
      "name": "browse-40-questions",
      "title": "Browse 40 Questions",
      "description": "Browse the 40 questions and view your answers by year",
      "mode": "view"
    },
    {
      "name": "import-answers",
      "title": "Import 40 Questions from Clipboard",
      "description": "Import answers to 40 questions from the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "importYear",
          "type": "text",
          "placeholder": "Year"
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "language",
      "title": "Language",
      "description": "The selected language for the questions",
