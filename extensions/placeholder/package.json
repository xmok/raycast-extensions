{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "placeholder",
  "title": "Placeholder",
  "description": "Just add your desired image size (width & height), and you'll get a stylish placeholder.",
  "icon": "placeholder-icon.png",
  "author": "koinzhang",
  "contributors": [
    "j3lte"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Design Tools",
    "Developer Tools",
    "Media"
  ],
  "keywords": [
    "Lorem",
    "picsum",
    "placeholder",
    "image",
    "photo",
    "design",
    "media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-placeholder-images",
      "title": "Search Placeholder Images",
      "description": "Search placeholder images, add your desired image size (width & height), and get a stylish placeholder.",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the image items.",
          "required": false,
          "title": "Image Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the image items. (Only works with Grid layout)",
          "required": false,
          "title": "Image Item Columns",
          "default": "5",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "perPage",
          "type": "dropdown",
          "description": "Number of images loaded per page.",
          "required": false,
          "title": "Per Page",
          "default": "100",
          "data": [
            {
              "title": "10",
              "value": "10"
            },
            {
              "title": "30",
              "value": "30"
            },
            {
              "title": "50",
              "value": "50"
            },
            {
              "title": "80",
              "value": "80"
            },
            {
              "title": "100",
              "value": "100"
            }
          ]
        }
      ]
    },
    {
      "name": "random-placeholder-image",
      "title": "Random Placeholder Image",
      "description": "Just add your desired image size (width & height), and get a random stylish placeholder.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "width",
          "type": "text",
          "required": false,
          "placeholder": "Width"
        },
        {
          "name": "height",
          "type": "text",
          "required": false,
          "placeholder": "Height"
        }
      ],
      "preferences": [
        {
          "name": "defaultWidth",
          "title": "Image Width",
          "type": "textfield",
          "description": "Set the default width of the image.",
          "required": false,
          "default": "300"
        },
        {
          "name": "defaultHeight",
          "title": "Image Height",
          "type": "textfield",
          "description": "Set the default height of the image.",
          "required": false,
          "default": "300"
        },
        {
          "name": "blur",
          "title": "Image Style",
          "label": "Blur",
          "type": "textfield",
          "description": "Level of image blurriness form 0-10",
          "required": false,
          "default": "0"
        },
        {
          "name": "jpg",
          "label": "JPG",
          "type": "checkbox",
          "description": "Get image url as .jpg",
          "required": false,
          "default": false
        },
        {
          "name": "grayscale",
          "label": "Grayscale",
          "type": "checkbox",
          "description": "Image grayscale or normal",
          "required": false,
          "default": false
        },
        {
          "name": "noCache",
          "label": "No Cache",
          "type": "checkbox",
          "description": "Prevent the image from being cached",
          "required": false,
          "default": false
        },
        {
          "name": "staticRandom",
          "label": "Static Random",
          "type": "checkbox",
          "description": "Get the same random image every time based on a seed",
          "required": false,
          "default": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "primaryAction",
      "type": "dropdown",
      "description": "Set the primary action in commands.",
      "required": false,
      "title": "Primary action",
      "default": "Copy Image URL",
      "data": [
        {
          "title": "Copy Image URL",
          "value": "Copy Image URL"
        },
        {
          "title": "Copy Image",
          "value": "Copy Image"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.3",
    "@raycast/utils": "^2.2.0",
    "fs-extra": "^11.2.0",
    "picsum-photos": "^3.0.10"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx -y @raycast/api@latest publish"
  }
}
