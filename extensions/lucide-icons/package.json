{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lucide-icons",
  "title": "Lucide Icons Search",
  "description": "Search the Lucide icon set",
  "icon": "command-icon.png",
  "author": "Sn0wye",
  "categories": [
    "Design Tools",
    "Developer Tools"
  ],
  "license": "MIT",
  "contributors": [
    "lin",
    "xilopaint",
    "ridemountainpig",
    "j3lte"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Search Icons",
      "subtitle": "Lucide",
      "description": "Grid view of Lucide icons",
      "mode": "view",
      "preferences": [
        {
          "name": "primaryAction",
          "type": "dropdown",
          "required": false,
          "title": "Primary Action",
          "description": "Primary action to use",
          "default": "copy-name",
          "data": [
            {
              "title": "Copy Name",
              "value": "copy-name"
            },
            {
              "title": "Copy SVG",
              "value": "copy-svg"
            },
            {
              "title": "Paste SVG",
              "value": "paste-svg"
            },
            {
              "title": "Copy Component",
              "value": "copy-component"
            },
            {
              "title": "Open In Browser",
              "value": "open-in-browser"
            }
          ]
        },
        {
          "name": "pascalCaseName",
          "title": "Copy Icon Name",
          "label": "Copy name in Pascal Case",
          "description": "Copy the icon name using Pascal case (e.g., 'LucideIconName').",
          "type": "checkbox",
          "required": false,
          "default": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
